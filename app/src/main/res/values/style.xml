<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/lightBlue</item>
    </style>

    <style name="toastBlue">
        <item name="colorBackground">#121212</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/lightBlue</item>
        <item name="textColor">@color/lightBlue</item>
    </style>

    <style name="shadow">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:textSize">40dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>